<div class="my-page">
  <h1>MY PAGE</h1>
</div>

<div class="header-list">
  <ul>
    <% if user_signed_in? %>
      <li><%= button_to 'log out', destroy_user_session_path, method: :delete %></li>
      <li><%= link_to "top", root_path %></li>
      <li><%= link_to "post new recipe", new_sweet_path %></li>
      <li><%= link_to 'return diagnosis', sindans_index_path %></li>
      <li><%= link_to 'recipe list', sweets_path %></li>
    <% else %>
      <li><%= link_to "top", root_path %></li>
      <li><%= link_to "sign up", new_user_registration_path %></li>
      <li><%= link_to "log in", new_user_session_path %></li>
      <li><%= link_to "post new recipe", new_sweet_path %></li>
      <li><%= link_to 'return diagnosis', sindans_index_path %></li>
