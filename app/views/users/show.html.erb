<div class="my-page">
  <h1>MY PAGE</h1>
</div>

<div class="header-list">
  <ul>
    <% if user_signed_in? %>
      <li><%= button_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
      <li><%= link_to "TOP", root_path %></li>
      <li><%= link_to "新規投稿へ", new_sweet_path %></li>
      <li><%= link_to 'ホワイトデーのお返し診断', sindans_index_path %></li>
      <li><%= link_to 'レシピ一覧', sweets_path %></li>
    <% else %>
      <li><%= link_to "TOP", root_path %></li>
      <li><%= link_to "新規登録", new_user_registration_path %></li>
      <li><%= link_to "ログイン", new_user_session_path %></li>
      <li><%= link_to "新規投稿へ", new_sweet_path %></li>
      <li><%= link_to 'ホワイトデーのお返し診断', sindans_index_path %></li>
      <li><%= link_to 'レシピ一覧', sweets_path %></li>
    <% end %>
  </ul>
</div>

<p>名前 : <%= @user.name %></p>
<p>メールアドレス : <%= @user.email %></p>
<p>プロフィール : <%= @user.profile %></p>

<%= image_tag @user.image_url, size: "250x200" if @user.image? %>

<% if current_user.id == @user.id %>
  <%= link_to "編集する", edit_user_registration_path %>
<% end %>

<h2>ユーザーの投稿一覧</h2>
<% @user.sweets.each do |t| %>
  <%= t.user.name %>
  <%= t.about %>
<% end %>

<!-- 以下はいいね機能を実装している場合-->
<h2>ユーザーがいいねした投稿一覧</h2>
<% @user.liked_sweets.each do |t| %>
  <%= t.user.name %>
  <%= t.about %>
<% end %>
<!-- ここまで-->

<%= link_to "sweet一覧に戻る", sweets_path %>