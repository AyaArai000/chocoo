    <% end %>
  </ul>
</div>

<div class='name1'>
  <p>Name <br>
</div>
<div class='name2'>
  <%= @user.name %></p>
</div>
<div class='emailaddress1'>
  <p>E-mail address <br>
</div>
<div class='emailaddress2'>
  <%= @user.email %></p>
</div>
<div class='profile1'>
  <p>Profile <br>
</div>

  <%= @user.profile %></p>

<%= image_tag @user.image_url, size: "250x200" if @user.image? %>

<% if current_user.id == @user.id %>
  <%= link_to "編集する", edit_user_registration_path %>
<% end %>

<h2>List of my posts</h2>
<% @user.sweets.each do |t| %>
  <%= t.user.name %>
  <%= t.about %>
<% end %>

<!-- 以下はいいね機能を実装している場合-->
